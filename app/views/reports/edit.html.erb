<div class="container mt-5">
  <h1>Edit <%= @report.premises_name %></h1>
<%= form_with(model: [@company, @report]) do |form| %>
    <% if @report.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@report.errors.count, "error") %> prohibited this post from being saved:</h2>
        <ul>
          <% @report.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    <% end %>
    <div class="d-inline-flex justify-content-between ms-5 p-3 mt-5">
      <div class="col-md-8">

        <div class="form-group textOnInput mt-3">
          <%= form.label :date_report_completed, "Date of assessment" %>
          <%= form.date_field :date_report_completed, class: "free-text-input-big", data: { controller: "flatpickr", flatpickr_date_format: "Y-m-d", flatpickr_min_date: Time.zone.now } %>
        </div>

        <div class="form-group textOnInput mt-3">
          <%= form.label :premises_name %>
          <%= form.text_field :premises_name, class: "free-text-input-big" %>
        </div>

        <div class="form-group textOnInput mt-3">
          <%= form.label :street_address, "Street Name & No"%>
          <%= form.text_field :street_address, class: "free-text-input-big"  %>
        </div>

        <div class="form-group textOnInput mt-3">
          <%= form.label :postcode %>
          <%= form.text_field :postcode, class: "free-text-input-big" %>
        </div>

        <div class="form-group textOnInput mt-3">
          <%= form.label :city %>
          <%= form.text_field :city, class: "free-text-input-big" %>
        </div>

        <div class="form-group textOnInput mt-3">
          <%= form.label :telephone_number %>
          <%= form.text_field :telephone_number, class: "free-text-input-big" %>
        </div>

        <div class="form-group textOnInput mt-3">
          <%= form.label :photos %>
          <%= form.file_field :photos, multiple: true, class: "free-text-input-big bg-white btn" %>
        </div>
      </div>
    </div>

    <div class="d-flex justify-content-between">
      <div>
        <%= link_to 'Back', companies_path, class: 'btn-big-dark' %>
      </div>
      <div class="justify-content-end">
        <%= form.submit class: "btn-big"%>
      </div>
    </div>
  <% end %>
