<div class="container">
  <h1 class="mb-5">This is the edit page for <%= @report.premises_name %></h1>
<div class="container mt-5">
  <%= form_with(model: [@company, @report], data: { insert_in_list_target: "form", action: "submit->insert-in-list#send" }, local: true) do |form| %>
    <% if @report.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@report.errors.count, "error") %> prohibited this post from being saved:</h2>
        <ul>
          <% @report.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <div class="d-inline-flex justify-content-between ms-5">
    <div class="form-group textOnInput">
      <%= form.label :date_report_completed, "Date of assessment" %>
      <%= form.date_field :date_report_completed, class: "free-text-input", data: { controller: "flatpickr", flatpickr_date_format: "Y-m-d", flatpickr_min_date: Time.zone.now } %>
    </div>
  </div>
  <div class="d-inline-flex justify-content-between ms-5">
    <div class="form-group textOnInput">
      <%= form.label :premises_name %>
      <%= form.text_field :premises_name, class: "free-text-input" %>
    </div>

    <div class="form-group textOnInput">
      <%= form.label :telephone_number %>
      <%= form.text_field :telephone_number, class: "free-text-input" %>
    </div>
  </div>
  <div class="d-inline-flex justify-content-between ms-5">
    <div class="form-group textOnInput">
        <%= form.label :street_address, "Street Name & No"%>
        <%= form.text_field :street_address, class: "free-text-input"  %>
    </div>

    <div class="form-group textOnInput">
        <%= form.label :postcode %>
        <%= form.text_field :postcode, class: "free-text-input" %>
    </div>

    <div class="form-group textOnInput">
        <%= form.label :city %>
        <%= form.text_field :city, class: "free-text-input" %>
    </div>
  </div>

  <div class="form-group textOnInput">
    <%= form.label :photos %>
    <%= form.file_field :photos, multiple: true, class: "free-text-input" %>
  </div>
  <div class="actions mt-5">
    <%= form.button :submit, class: "btn-big" %>
  </div>

<% end %>
