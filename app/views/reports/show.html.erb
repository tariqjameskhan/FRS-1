<div class="container mt-5">
  <h1>Assessment for <%= @report.premises_name %></h1>
  <div class="d-inline-flex mt-3">
    <div class="p-3">
      <p>Date of assessment</p>
      <p class="free-text-input">
      <% if  @report.date_report_completed? %>
      <%= @report.date_report_completed %>
      <% else %>
      01/01/2000
      <% end %></p>
    </div>
    <div class="p-3">
      <p>Name of Assessor</p>
      <p class="free-text-input"><%= @report.company.inspector.first_name %> <%= @report.company.inspector.last_name %></p>
    </div>
    <div class="p-3 mt-5">
      <%= link_to 'Action plan', action_plan_path(@company, @report), class: 'btn-big' %>
    </div>
  </div>
  <h2>Address</h2>
  <div class="d-inline-flex">
    <div class="p-3">
      <p>Street address</p>
      <p class="free-text-input"><%= @report.street_address %></p>
    </div>
    <div class="p-3">
      <p>City</p>
      <p class="free-text-input"><%= @report.city %></p>
    </div>
    <div class="p-3">
      <p>Postcode</p>
      <p class="free-text-input"><%= @report.postcode %></p>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="map" data-controller="map"
              id="map"
              data-map-markers-value="<%= @markers.to_json %>"
              data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
              >
    </div>
  </div>
  <% if @report.photos.any? %>
    <h2>Photos</h2>
    <div class="d-inline-flex mt-1">
      <% @report.photos.each do |photo| %>
        <div class="m-4">
          <%= cl_image_tag photo.key, width: 200, height: 200, crop: :fill %>
        </div>
      <% end %>
    </div>
  <% end %>
  <h2 class="mt-4">Construction details</h2>
  <div class="m-3">
    <p class="free-text-input">Some details about construction</p>
  </div>
   <div class="d-inline-flex">
    <div class="p-3">
      <p>Number of floors</p>
      <p class="free-text-input">1</p>
    </div>
    <div class="p-3">
      <p>Floor area</p>
      <p class="free-text-input">2000m2</p>
    </div>
    <div class="p-3">
      <p>Floor Plan</p>
      <p class="free-text-input">attach file ðŸ“Ž</p>
    </div>
  </div>
  <h2>Responsible Person</h2>
  <div class="d-inline-flex">
    <div class="p-3">
      <p>Full name</p>
      <p class="free-text-input"><%= @report.company.client.first_name %> <%= @report.company.client.last_name %></p>
    </div>
    <div class="p-3">
      <p>Phone number</p>
      <p class="free-text-input"><%= @report.company.client.telephone_number %></p>
    </div>
    <div class="p-3">
      <p>Email</p>
      <p class="free-text-input"><%= @report.company.client.email %></p>
    </div>
  </div>
  <div>
    <% @report_questions.sort.each do |report_q| %>
      <div class="m-3">
        <%= form_with(model: [@company, @report, report_q], local: true) do |form| %>
        <h5 class="card-title"><%= report_q.question.question_name %></h5>
        <% @question = report_q.question %>
        <% @faults = @question.faults %>
        <% @question.faults.each do |fault| %>
          <p><%= fault.fault_detail %> - <%= fault.recommendation %></p>
        <% end %>
        <div class="field">
          <%= form.label :answer, class: "" %>
          <%= form.check_box :answer, class: "" %>

              <%# <input type="checkbox" class="js-switch" checked /> %>
        </div>
          <div class="d-flex mt-5">
            <%# <div class="form-check form-switch"> %>
              <%# <%= form.label :answer, class: "" %>
              <%# <%= form.check_box :answer, class: "form-check-input" %>

              <%# <input type="checkbox" class="js-switch" checked /> %>
            <%# </div> %>
            <%# <div class="form-check form-switch"> %>
              <%# <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault"> %>
              <%# <label class="form-check-label" for="flexSwitchCheckDefault">Default switch checkbox input</label> %>
            <%# </div> %>
            <div class="form-group textOnInput">
              <%= form.label :fault %>
              <%= form.text_field :fault, class: "free-text-input" %>
              <%# <%= form.collection_select :fault_detail, report_q, @questions, @faults, class: "free-text-input" %>
            </div>
            <div class="form-group textOnInput">
              <%= form.label :recommendation %>
              <%= form.text_field :recommendation, class: "free-text-input" %>
            </div>
            <%# <%= simple_form_for [@company, @report, report_q, @question] do |f| %> %>
              <%# <%= f.association :fault_detail, @faults%> %>
              <%# <%= f.submit %> %>
            <%# <% end %> %>
          </div>
          <div class="d-flex mt-4">
            <div class="form-group textOnInput">
              <%= form.label :priority %>
              <%= form.text_field :priority, class: "free-text-input" %>
            </div>
            <div class="form-group textOnInput">
              <%= form.label :date %>
              <%= form.text_field :date, class: "free-text-input" %>
            </div>
            <div class="actions">
              <%= form.submit class: "btn-big-dark"%>
            </div>
          </div>
        <% end %>

      </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-between mt-5">
    <div>
      <%= link_to 'Back to Company', company_path(@report.company), class: 'btn-big-dark' %>
    </div>
    <div>
      <%= link_to 'Action plan', action_plan_path(@company, @report), class: 'btn-big' %>
    </div>
    <div class="justify-content-end">
      <% if current_user.inspector? %>
        <%= link_to 'Submit', "#", class: 'btn-big-dark' %>
      <% end %>
    </div>
  </div>
</div>
