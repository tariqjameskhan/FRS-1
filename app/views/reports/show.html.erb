<div class="container mt-5">
  <h1>Assessment for <%= @report.premises_name %></h1>
  <div class="d-inline-flex mt-3">
    <div class="p-3">
      <p>Date of assessment</p>
      <p class="free-text-input">
      <% if  @report.date_report_completed? %>
      <%= @report.date_report_completed %>
      <% else %>
      01/01/2000
      <% end %></p>
    </div>
    <div class="p-3">
      <p>Name of Assessor</p>
      <p class="free-text-input"><%= @report.company.inspector.first_name %> <%= @report.company.inspector.last_name %></p>
    </div>
    <div class="p-3 mt-5">
      <%= link_to 'Action plan', action_plan_path(@company, @report), class: 'btn-big' %>
    </div>
  </div>
  <h2>Address</h2>
  <div class="d-inline-flex">
    <div class="p-3">
      <p>Street address</p>
      <p class="free-text-input"><%= @report.street_address %></p>
    </div>
    <div class="p-3">
      <p>City</p>
      <p class="free-text-input"><%= @report.city %></p>
    </div>
    <div class="p-3">
      <p>Postcode</p>
      <p class="free-text-input"><%= @report.postcode %></p>
    </div>
  </div>
  <div class="col-lg-6 mt-5 mb-5">
    <div class="map" data-controller="map"
              id="map"
              data-map-markers-value="<%= @markers.to_json %>"
              data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
              >
    </div>
  </div>
  <% if @report.photos.any? %>
    <h2>Photos</h2>
    <div class="d-inline-flex mt-1">
      <% @report.photos.each do |photo| %>
        <div class="m-4">
          <%= cl_image_tag photo.key, width: 200, height: 200, crop: :fill %>
        </div>
      <% end %>
    </div>
  <% end %>
  <h2>Responsible Person</h2>
  <div class="d-inline-flex">
    <div class="p-3">
      <p>Full name</p>
      <p class="free-text-input"><%= @report.company.client.first_name %> <%= @report.company.client.last_name %></p>
    </div>
    <div class="p-3">
      <p>Phone number</p>
      <p class="free-text-input"><%= @report.company.client.telephone_number %></p>
    </div>
    <div class="p-3">
      <p>Email</p>
      <p class="free-text-input"><%= @report.company.client.email %></p>
    </div>
  </div>
  <h2 class="mt-4 mb-4">Construction Details</h2>
  <div>
    <div class="m-3">
      <% @names = [] %>
      <% @fault_array = [] %>
      <% @recommendation_array = [] %>
      <% @report_questions.sort.each do |report_q| %>
        <% @names << report_q.question.question_name %>
        <% @faults = report_q.question.faults %>
        <% @fault_names = [" "] %>
        <% @fault_recommendations = [" "] %>
        <% @faults.each do |fault| %>
          <% @fault_names << fault.fault_detail %>
          <% @fault_recommendations << fault.recommendation %>
        <% end %>
        <% @fault_array << @fault_names %>
        <% @recommendation_array << @fault_recommendations %>
      <% end %>
      <% num = -1 %>
      <%= form_with model: [@company, @report] do |p| %>
        <div class="form-group textOnInput mt-5">
            <%= p.label :construction_details %>
            <%= p.text_area :construction_details, cols: 115, rows: 6, class: "free-text-input" %>
        </div>
        <div class="d-inline-flex">
          <div class="form-group textOnInput">
              <%= p.label :number_of_floors %>
              <%= p.text_field :number_of_floors, class: "free-text-input" %>
          </div>
          <div class="form-group textOnInput">
              <%= p.label :floor_area %>
              <%= p.text_field :floor_area, class: "free-text-input" %>
          </div>
          <div class="form-group textOnInput">
            <%= p.label :photos, "Photos" %>
            <%= p.file_field :photos, multiple: true, class: "free-text-input bg-white btn" %>
          </div>
        </div>
        <h2 class="mt-4 mb-4">Report</h2>
        <%= p.fields_for :report_questions, @report.report_questions.sort do |f| %>
          <%# <%= f.text_field :question_id %>
          <% num += 1 %>
          <div data-controller="question-card">
            <div class="d-flex justify-content-between m-2 pb-3 pt-3 mt-5">
              <div>
                <h5 class="card-title"><%= @names[num] %></h5>
              </div>
              <div class="field d-inline-flex">
                <div class="form-check form-switch">
                  <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" data-action="change->question-card#hideContent">
                  <label class="form-check-label" for="flexSwitchCheckDefault">Answer</label>
                </div>
              </div>
            </div>
            <div class="d-flex mt-3", data-question-card-target="contents">
                <div class="form-group textOnInput">
                  <%= f.label :fault %>
                  <%= f.select :fault, @fault_array[num], class: "" %>
                </div>
                <div class="form-group textOnInput">
                  <%= f.label :recommendation %>
                  <%= f.select :recommendation, @recommendation_array[num], class: "" %>
                </div>
            </div>
          </div>
          <div class="d-flex mt-4">
              <div class="form-group textOnInput">
                <%= f.label :priority %>
                <%= f.select :priority, [" ", "HIGH", "MEDIUM", "LOW"], class: "" %>
              </div>
              <div class="form-group textOnInput">
                <%= f.label :date %>
                <%= f.date_field :date, class: "free-text-input", data: { controller: "flatpickr", flatpickr_date_format: "Y-m-d", flatpickr_min_date: Time.zone.now } %>
              </div>
              <div class="d-inline-flex">
                <%# <div class="form-group textOnInput">
                  <%= form.label :photos %>
                  <%# <%= form.file_field :photos, multiple: true, class: "free-text-input bg-white btn" %>
                <%# </div> %>
                <div class="mt-2">
                  <h1><strong>+</strong></h1>
                </div>
              </div>
            </div>
        <% end %>
        <div data-controller="submit-all-forms">
          <div class="d-flex justify-content-between mt-5">
            <div>
              <%= link_to 'Back to Company', company_path(@report.company), class: 'btn-big-dark' %>
            </div>
            <div class="justify-content-end">
              <% if current_user.inspector? %>
                <%= p.submit class: "btn-big"%>
              <% else %>
                <%= link_to 'Action plan', action_plan_path(@company, @report), class: 'btn-big' %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
