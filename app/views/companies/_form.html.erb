<%= form_with(model: @company, local: true) do |form| %>
  <% if @company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@company.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
      <% @company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="form-group">
    <%= form.label :address %>
    <%= form.text_area :address %>
  </div>

  <div class="form-group">
    <%= form.label :telephone_number %>
    <%= form.text_field :telephone_number, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :email_address %>
    <%= form.text_field :email_address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :client %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

