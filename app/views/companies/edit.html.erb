<div class="container mt-5">
  <h1>Edit Company</h1>

  <%= form_with(model: @company, local: true) do |form| %>
    <% if @company.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@company.errors.count, "error") %> prohibited this post from being saved:</h2>
        <ul>
        <% @company.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="d-inline-flex justify-content-between ms-5 p-3 mt-5">
      <div class="col-md-8">

        <div class="form-group textOnInput mt-3">
          <%= form.label :name %>
          <%= form.text_field :name, class: "free-text-input-big" %>
        </div>

        <div class="form-group textOnInput mt-3">
          <%= form.label :email_address %>
          <%= form.text_field :email_address, class: "free-text-input-big"  %>
        </div>

        <div class="form-group textOnInput mt-3">
          <%= form.label :telephone_number %>
          <%= form.text_field :telephone_number, class: "free-text-input-big" %>
        </div>
        <div class="form-group textOnInput mt-3">
          <%= form.label :address %>
          <%= form.text_field :address, class: "free-text-input-big" %>
        </div>
      </div>
    </div>

  <div class="d-flex justify-content-between mt-4">
    <div>
      <%= link_to 'Back', company_path(@company), class: "btn-big-dark"%>
    </div>
    <div class="justify-content-end">
      <% if current_user.inspector? %>
        <%= form.submit class: "btn-big"%>
      <% end %>
    </div>
  </div>
</div>
  <% end %>
