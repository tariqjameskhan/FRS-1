<div class="container">
  <h1 class="mb-5">Edit Company</h1>

  <%= form_with(model: @company, local: true) do |form| %>
    <% if @company.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@company.errors.count, "error") %> prohibited this post from being saved:</h2>
        <ul>
        <% @company.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
      <div class="d-inline-flex justify-content-between ms-5">
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: "free-text-input" %>
        </div>

        <div class="form-group">
          <%= form.label :email_address %>
          <%= form.text_field :email_address, class: "free-text-input"  %>
        </div>

        <div class="form-group">
          <%= form.label :telephone_number %>
          <%= form.text_field :telephone_number, class: "free-text-input" %>
        </div>
      </div>

      <div class="form-group">
        <%= form.label :address %>
        <%= form.text_field :address, class: "free-text-input-big" %>
      </div>

      <div class="actions">
        <%= form.submit class: "btn"%>
      </div>
  <% end %>
  <div class="mt-5">
    <%= link_to 'Back', company_path(@company), class: "btn-big-dark"%>
  </div>
</div>
