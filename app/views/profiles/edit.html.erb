<div class="container mt-5">
  <h1>Edit Profile</h1>

  <%= form_with(model: @user, url: profile_path, local: true) do |form| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this post from being saved:</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="d-inline-flex justify-content-between ms-5 p-3 mt-5">
      <div class="col-md-12">
        <div class="form-group textOnInput mt-3">
          <%= form.label :first_name %>
          <%= form.text_field :first_name, class: "free-text-input-big" %>
        </div>
        <div class="form-group textOnInput mt-3">
          <%= form.label :last_name %>
          <%= form.text_field :last_name, class: "free-text-input-big" %>
        </div>
        <div class="form-group textOnInput mt-3">
          <%= form.label :email %>
          <%= form.text_field :email, class: "free-text-input-big" %>
        </div>
        <div class="form-group textOnInput mt-3">
          <%= form.label :telephone_number %>
          <%= form.text_field :telephone_number, class: "free-text-input-big" %>
        </div>

        <div class="d-flex justify-content-between mt-3">
          <div>
            <%= link_to 'Back', companies_path, class: 'btn-big-dark' %>
          </div>
          <div class="justify-content-end">
            <%= form.submit 'Save Changes', class: 'btn-big' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
